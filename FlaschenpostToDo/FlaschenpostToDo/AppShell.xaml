<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="FlaschenpostToDo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:FlaschenpostToDo.Presentation.View"
    Title="FlaschenpostToDo"
    Shell.TabBarTitleColor="Black"
    Shell.TabBarBackgroundColor="LightGreen">

    <TabBar>
        <Tab Title="ToDo">
            <ShellContent
                ContentTemplate="{DataTemplate view:TodoPage}"
                Route="TodoPage" />
        </Tab>
        <Tab Title="Done">
            <ShellContent
                ContentTemplate="{DataTemplate view:DonePage}"
                Route="DonePage" />
        </Tab>
    </TabBar>

</Shell>